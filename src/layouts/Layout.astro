---
import "@/styles/global.css";

import Footer from "@/components/sections/Footer.astro";
import Header from "@/components/sections/Header.astro";
import { Alert, AlertTitle } from "@/components/ui/alert";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Charles Babbage</title>
  </head>
  <body>
    <!-- Remove this alert to stop showing the template notice. -->
    <Alert
      class="bg-primary text-primary-foreground"
      border={false}
      rounded="none"
    >
      <AlertTitle class="justify-center">
        <span class="text-center">
          This site is a
          <a
            href="https://github.com/nsmichelj/orbitui-porfolio-template"
            target="_blank"
            class="underline"
          >
            template
          </a>
          for building a personal website using Astro, Tailwind CSS and <a
            href="https://github.com/nsmichelj/orbitui"
            target="_blank"
            class="underline"
          >
            OrbitUI</a
          >.
        </span>
      </AlertTitle>
    </Alert>
    <Header />
    <div class="max-w-7xl mx-auto p-4">
      <slot />
    </div>
    <Footer />
  </body>
</html>
